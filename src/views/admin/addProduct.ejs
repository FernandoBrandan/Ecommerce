<%- include('../partials/header') %> 



<div class="container container-admin-product">    
    <div class="row row-admin-product">
        <%= locals.succ? succ: ""%>
        <h4>Agregar producto</h4>        
        <form action="/product" method="post" enctype="multipart/form-data" onsubmit="return allChecking()">
            
            <div class="form-group p-2">
                <input type="text" class="form-control" name="name" placeholder="Name *" required>
            </div>
            
            <div class="form-group p-2">
                <input type="text" class="form-control" name="description" placeholder="Description *" required>
            </div>

            <div class="form-group p-2">
                <input type="file" class="form-control" name="image" placeholder="Image *" required>
            </div>
            
            
            <div class="form-group p-2 mt-3">
                <button type="submit" class="form-control btn btn-success">Create Account</button>
            </div>                  
         </form>
    </div>
</div>





<%- include('../partials/footer') %>